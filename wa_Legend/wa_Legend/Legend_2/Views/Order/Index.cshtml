@model IEnumerable<Legend_2.Models.Order>
@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>
<a asp-action="Upsert" style="margin:20px; margin-left:initial" class="btn btn-outline-success">Create new order</a>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Orders</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Order item in Model)
            {
                <tr>
                    <td>@item.NameOrder</td>
                    <td>
                        <a asp-action="Upsert" asp-route-Id="@item.Id" class="btn btn-outline-primary">Edit</a>
                        <a asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-outline-danger">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>No orders stored</div>
}


