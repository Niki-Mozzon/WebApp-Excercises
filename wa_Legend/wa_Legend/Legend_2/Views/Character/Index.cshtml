@model IEnumerable<Legend_2.Models.Character>
@{
    ViewData["Title"] = "Index";
}

<h1>Characters</h1>
<a class="btn btn-outline-success" asp-action="Upsert">Create new character</a>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Character</th>
                <th>Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Character item in Model)
            {
                <tr>
                    <td>@item.NameCharacter</td>
                    <td>@item.OrderCharacter.NameOrder</td>
                    <td>
                        <a asp-action="Upsert" asp-route-Id="@item.Id" class="btn btn-outline-primary">Edit</a>
                        <a asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-outline-danger">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>No characters registered</div>
}
