@model IEnumerable<Legend_1.Models.Character>
@{
    ViewData["Title"] = "Index";
}

<h1>Characters</h1>

<a asp-action="Upsert" class="btn btn-outline-success">Create new character</a>

@if (Model.Count()>0)
{
    <table class="table-bordered table-striped table">
        <thead>
            <tr>
                <th>Character</th>
                <th>Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Character item in Model)
            {
            <tr>
                <td>@item.NameCharacter</td>
                <td>@item.OrderCharacter.NameOrder</td>
                <td>
                    <a asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-outline-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-warning">Remove</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <div style="text-align:center">No characters available</div>
}
